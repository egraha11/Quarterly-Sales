@model Sale

<div class="container">
    <div class="row">
        <div class="col">
            <h2>Add Sale</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form asp-controller="Sales" asp-action="Add" method="post">
                <div class="form-group row">
                    <div class="col-2">
                        <label>Quarter: </label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Quarter" class="form-control" />
                    </div>
                    <div class="col-6">
                        <span asp-validation-for="Quarter" class="danger">
                        </span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label>Year: </label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Year" class="form-control" />
                    </div>
                    <div>
                        <span asp-validation-for="Year" class="danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label>Ammount: </label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Ammount" class="form-control" />
                    </div>
                    <div class="col-6"><span asp-validation-for="Ammount" class="danger"></span></div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label>Employee: </label>
                    </div>
                    <div class="col-4">
                        <select name="EmployeeId" asp-items="@(new SelectList(ViewBag.Employees, "EmployeeId", "FirstName"))" class="form-control"></select>
                    </div>    
                    <div class="col-6">
                        <span asp-validation-for="Employee" class="danger"></span>
                    </div>    
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Add</button>
                    <a class="btn" asp-controller="Home" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>