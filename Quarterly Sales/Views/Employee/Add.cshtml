@model Employee


<div class="container">
    <div class="row">
        <div class="col">
            <h2>Add Employee</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form asp-controller="Employee" asp-action="Add" method="post">
                <div class="form-group row">
                    <div class="col-2">
                        <label>First Name: </label>
                    </div>
                    <div class="col-4">
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="col-6">
                        <span asp-validation-for="FirstName" class="danger">
                        </span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label>Last Name: </label>
                    </div>
                    <div class="col-4">
                        <input asp-for="LastName" class="form-control" />
                    </div>
                    <div class="col-6">
                        <span asp-validation-for="LastName" class="danger">

                        </span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label>Birth Date: </label>
                    </div>
                    <div class="col-4">
                        <input asp-for="DOB" class="form-control" />
                    </div>
                    <div class="col-6">
                        <span asp-validation-for="DOB" class="danger">

                        </span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label>Hire Date: </label>
                    </div>
                    <div class="col-4">
                        <input asp-for="DateOfHire" class="form-control" />
                    </div>
                    <div class="col-6">
                        <span asp-validation-for="DateOfHire" class="danger">
                        </span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label>Manager: </label>
                    </div>
                    <div class="col-4">
                        <select name="ManagerId" asp-items="@(new SelectList(ViewBag.Employees, "EmployeeId", "FirstName"))" class="form-control"></select>
                    </div>
                    <div class="col-6">
                        <span asp-validation-for="DateOfHire" class="danger">
                        </span>
                    </div>
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-primary">Add</button>
                    <a class="btn" asp-controller="Home" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>